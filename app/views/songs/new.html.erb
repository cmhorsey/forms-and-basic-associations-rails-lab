<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :song_title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :song_artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :song_genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <%= f.label :song_notes_1 %>
  <%= text_field_tag 'song[note_contents][]', nil, id: "song_notes_1" %>
  <br />
  <%= f.label :song_notes_2 %>
  <%= text_field_tag 'song[note_contents][]', nil, id: "song_notes_2" %>
  <br />

  <%= f.submit 'Create Song', name: 'commit' %>
<% end %>
